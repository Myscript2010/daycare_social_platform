body
  background: #f3f3f3

a
  color: #5caae3
a:hover
  color: #FFF

#wrapper
  background: url("/images/index/blackboard_bg.png") no-repeat top center
  .content-wrapper
    background: transparent
    #logo
      display: block
      background: url("/images/index/logo.png") no-repeat top center
      width: 168px
      height: 47px
    #call-to-action
      float: left
      width: 530px
      color: #FFF
      #tagline
        font-size: 20px
        margin: 20px 0 0 0
      #parent-educators
        font-size: 72px
        margin: 0 0 20px 0
        line-height: 72px
        font-weight: bold
      #action-buttons
        background: url("/images/index/request_tour_bt.png") no-repeat top center
        width: 357px
        height: 53px
        .request-invite-cnt
          color: #FFF
          font-size: 19px
          display: inline-block
          padding: 10px 30px 10px 30px
        .take-the-tour-cnt
          color: #000
          font-size: 19px
          display: inline-block
          padding: 10px 30px 10px 30px
      #registered-memebers-text
        width: 350px
        font-size: 15px
        text-align: center
        margin: 15px 0 15px 0
      #arrow-left
        float: right
        width: 170px
        height: 123px
        background: url("/images/index/arrow_left.png") no-repeat top left
        margin: -130px 0 0 0
    #site-preview
      background: url("/images/index/site_preview.png") no-repeat top center
      width: 450px
      height: 593px
      float: right
      margin: -47px 0 0 0
    #testimonials-cnt
      float: left
      overflow: hidden
      margin: 25px 0 0 0
      .testimonial
        background: url("/images/index/testimonial_bg.png") no-repeat top center
        width: 510px
        height: 140px
        blockquote
          font-size: 17px
          font-style: italic
          height: 75px
          padding: 30px 15px 30px 15px
          overflow: hidden
        .author
          float: right
          margin: 0 10px 0 0
          font-weight: bold
          font-size: 13px
      #testimonials-scroller
        li
          margin: 0 5px 0 0
          display: inline-block
          a
            display: inline-block
            background: url("/images/index/testimonial_bt.png") no-repeat top left
            width: 15px
            height: 15px
        li.selected
          a
            background: url("/images/index/testimonial_bt_selected.png") no-repeat top left
    #feature-boxes
      float: left
      clear: both
      margin: 15px 0 20px 0
      li
        width: 320px
        float: left
        margin: 0 10px 0 0
        padding: 150px 0 0 0
        text-align: center
        height: 160px
        h2
          margin: 0 0 25px 0
        p
          font-size: 14px
          padding: 0 10px 0 10px
      li#communicate-box
        background: #FFF url("/images/index/communicate_symbol.png") no-repeat center 30px
      li#be-present-online-box
        background: #FFF url("/images/index/be_present_symbol.png") no-repeat center 30px
      li#create-communities-box
        margin: 0
        background: #FFF url("/images/index/create_symbol.png") no-repeat center 30px
  .footer
    .f-menu
      float: none
      width: 100%
      text-align: center
      margin: 0 0 15px 0
      li
        display: inline-block
        float: none
        a
          font-weight: bold
    .copy
      float: none
      width: 100%
      text-align: center

#invite-window
  .doom-win-content
    padding: 20px
    form
      background: #F4F4F4
      padding: 10px
      margin: 10px
      textarea
        width: 300px
        height: 100px
#log-in-window
  .doom-win-content
    padding: 20px
    form
      background: #F4F4F4
      padding: 10px
      margin: 10px


