!!!
html
  head
    title= title

    include _styles

  body

    header
      #header-wrapper
        ul#main-menu.hidden
          li
            a(href='#') Kindzy
          li
            a(href='#') Home
          li#my-profile-bt
            a(href='#')
              img(src='/images/no_picture.png', alt='My profile', height='32', width='32', id="my-profile-thumb")
            ul.submenu.hidden
              li
                a(href="#profiles/view/:id", id="my-profile-view-url") My profile
              li
                a(href="#profiles/edit/:id", id="my-profile-edit-url") Edit profile
              li#my-daycares-list
          li#account-bt
            a(href='#', id="my-settings-bt")
              span Account
            ul.submenu.hidden
              li
                a(href="/logout") Logout
        ul#events-menu.hidden
          li.messages
            a(href='#messages/inbox')
              span#new-messages-total.indicator.hidden 0
            ul#last-messages.notification-list.hidden
          li.friend-request
            a(href='#')
              span#new-requests-total.indicator.hidden 0
            ul#last-requests.notification-list.hidden
          li.notifications
            a(href='#')
              span#new-followups-total.indicator.hidden 0
            ul#last-followups.notification-list.hidden
          li.ccn
            a(href='#')
              span#new-wall-posts-total.indicator.hidden 0
            ul#last-wall-posts.notification-list.hidden
        a(href='/')
          img(src='/images/logo.png', alt='Kindzy.com', id='logo')
        #search-cnt.hidden
          ul#search-menu.invisible
            li.by-type
              a(href='#search-by-name')
                span by type
            li.by-name
              a(href='#search-by-type')
                span by name
          #search-bar
            button#search-bt
    #page-wrapper
      #side-column1
      #side-column2
      #main-column
        !{body}
    footer
      #footer-wrapper
        ul
          li
            a(href='#') About Us
          li
            a(href='#') Contact Us
          li
            a(href='#') Help
          li
            a(href='#') Submission Guidelines
          li
            a(href='#') Privacy Policy
          li
            a(href='#') Terms of Use
          li
            a(href='#') Partners
          li
            a(href='#') Widgets and Tools
        p#copyright Copyright &copy; 2011 Kindzy.com, Inc. All rights reserved.

    #top-link(href="#top") Top of Page

    include _scripts
